<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BrewMapp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item><!-- text size in menu-->
        <!--<item name="android:listPreferredItemHeightSmall">60dp</item>-->
    </style>

    <style name="CheckSearchCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorButtonGray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>
